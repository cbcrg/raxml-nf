#
# This is just wrapper to invoke the right binary executable 
# depending the number of threads specified (-T option)
# 
 
set -u
set -e 
main='raxmlHPC'
declare -a args=("$@")
while [[ $# != 0 ]]; do
    case $1 in
    -T)
        shift;
        [ "$1" -gt 1 ] && main='raxmlHPC-PTHREADS'       
      ;;
    esac
    shift
done

$main "${args[@]}"